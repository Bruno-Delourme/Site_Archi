   <script>
       document.getElementById("footer").onclick = function() {
           window.scrollTo({
               top: 0,
               behavior: "smooth"
           });
       };

       document.addEventListener('mousemove', function() {
           document.body.style.setProperty('--scrollbar-opacity', '1');
           clearTimeout(window.scrollbarTimer);
           window.scrollbarTimer = setTimeout(function() {
               document.body.style.setProperty('--scrollbar-opacity', '0');
           }, 2000); // Cacher après 2 secondes d'inactivité
       });
   </script>
